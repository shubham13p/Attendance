<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp">


        <TextView
            android:id="@+id/student_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sample"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/student_email"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="@string/count"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mycount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/sample"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="COUNT"
            android:textColor="#ff0000"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/mytotalclass"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/mycount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="TOTAL CLASS"
            android:textColor="#ff0000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/barcodescan"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/mytotalclass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/status"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:visibility="gone" />
</android.support.constraint.ConstraintLayout>